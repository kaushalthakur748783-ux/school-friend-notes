<NotesScreen>:
    canvas.before:
        Color:
            rgba: (0.1, 0.1, 0.2, 1)  # dark gradient background
        Rectangle:
            pos: self.pos
            size: self.size

<NoteCard>:
    canvas.before:
        Color:
            rgba: (0.2, 0.2, 0.3, 0.9)  # card bg
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [15]

<Button>:
    background_normal: ""
    background_down: ""
    background_color: (0.2, 0.6, 0.9, 1)
    color: (1, 1, 1, 1)
    font_size: 16
